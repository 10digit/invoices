div(ng-controller="InvoiceLineCtrl")
    table.table.table-striped
        thead
            tr
                th Description
                th Amount
        tbody
            tr(ng-repeat="line in invoice.items")
                td {{line.description}}
                td ${{(line.amount / 100).toFixed(2)}}
            tr.info
                td
                    strong Total
                td ${{(invoice.amount / 100).toFixed(2)}}
